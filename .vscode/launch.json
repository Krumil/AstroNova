{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Eliza",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register/esm"
            ],
            "args": [
                "src/index.ts"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "DEBUG": "eliza:*"
            },
            "console": "integratedTerminal",
            "sourceMaps": true
        }
    ]
}